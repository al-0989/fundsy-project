<%= simple_form_for @campaign do |f| %>
  <%= f.input :name, label: "Campaign Name", input_html: {class: "small_field"}%>
  <%= f.input :description %>
  <%= f.input :goal, as: :string %> <%# this is to tell it to use just a textbox rather than the usual number field. %>
  <%= f.input :end_date %>
  <%# f.file_field :image  %>
  <%= f.input :image %>
  <div id="rewards">
    <%= f.simple_fields_for :rewards do |r| %>
      <%= render "reward_fields", f: r %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "Add Reward", f, :rewards %>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
